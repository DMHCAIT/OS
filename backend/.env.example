# üöÄ AI Sales Automation System - Environment Configuration Template
# Copy this file to .env and fill in your real API keys

# ===========================
# üîß BASIC APPLICATION SETUP
# ===========================
APP_NAME="AI Sales Automation System"
APP_VERSION="1.0.0"
DEBUG=False
SECRET_KEY="your-super-secure-secret-key-change-this-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days

# ===========================
# üóÑÔ∏è DATABASE CONFIGURATION
# ===========================
# MongoDB (Primary database for leads, conversations, calls)
MONGODB_URL="mongodb://localhost:27017"
DATABASE_NAME="ai_sales_automation_db"

# PostgreSQL (Analytics and reporting - optional)
POSTGRESQL_URL="postgresql://username:password@localhost:5432/ai_sales_db"

# Redis (Real-time cache and session management)
REDIS_URL="redis://localhost:6379"
CACHE_EXPIRE_SECONDS=3600

# ===========================
# ü§ñ AI/ML SERVICES (REQUIRED)
# ===========================
# OpenAI API (For GPT-4 conversation intelligence)
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Anthropic Claude (Alternative AI model)
ANTHROPIC_API_KEY="sk-ant-your-anthropic-key-here"

# HuggingFace (For additional ML models)
HUGGINGFACE_API_KEY="hf_your-huggingface-token-here"

# ===========================
# üé§ VOICE AI SERVICES (FOR AUTOMATIC CALLING)
# ===========================
# ElevenLabs (RECOMMENDED - Ultra-realistic voice)
ELEVENLABS_API_KEY="your-elevenlabs-api-key-here"

# Azure Speech Services (Enterprise alternative)
AZURE_SPEECH_KEY="your-azure-speech-key-here"
AZURE_SPEECH_REGION="eastus"

# ===========================
# üìû PHONE/SMS SERVICES (FOR AUTOMATIC CALLS)
# ===========================
# Twilio (For making actual phone calls and SMS)
TWILIO_ACCOUNT_SID="your-twilio-account-sid-here"
TWILIO_AUTH_TOKEN="your-twilio-auth-token-here"
TWILIO_PHONE_NUMBER="+1234567890"  # Your Twilio phone number

# ===========================
# üìß EMAIL CONFIGURATION
# ===========================
# SMTP for automated email sending
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-email-app-password"

# ===========================
# üîó CRM INTEGRATIONS (OPTIONAL)
# ===========================
# Salesforce
SALESFORCE_API_KEY="your-salesforce-key-here"
SALESFORCE_INSTANCE_URL="https://yourcompany.salesforce.com"

# HubSpot  
HUBSPOT_API_KEY="your-hubspot-private-app-token"

# Pipedrive
PIPEDRIVE_API_KEY="your-pipedrive-api-token"

# ===========================
# üîê SECURITY SETTINGS
# ===========================
JWT_SECRET_KEY="your-jwt-secret-key-change-this"
ENCRYPTION_KEY="your-encryption-key-32-characters-long"

# ===========================
# üéõÔ∏è AI VOICE CONFIGURATION
# ===========================
# Voice AI Settings
VOICE_PROVIDER="elevenlabs"  # Options: elevenlabs, azure, openai
VOICE_ID="bella"             # Voice personality ID
VOICE_SPEED=1.0              # Speaking speed (0.5-2.0)
VOICE_STABILITY=0.75         # Voice consistency (0.0-1.0)
VOICE_CLARITY=0.75          # Voice clarity (0.0-1.0)

# ===========================
# üéØ AUTOMATIC CALLING SETTINGS
# ===========================
AUTO_DIAL_ENABLED=True
MAX_CALLS_PER_DAY=100
CALL_BUSINESS_HOURS_ONLY=True
BUSINESS_HOURS_START="09:00"
BUSINESS_HOURS_END="17:00"
TIME_ZONE="America/New_York"
LEAD_SCORE_THRESHOLD=70      # Only call leads scoring 70+ 

# ===========================
# üìä ML/AI MODEL SETTINGS
# ===========================
MODEL_UPDATE_INTERVAL=3600   # Update models every hour
PREDICTION_CONFIDENCE_THRESHOLD=0.8
LEAD_SCORE_THRESHOLD=0.7
RETRAINING_DATA_THRESHOLD=100  # Retrain after 100 new data points

# ===========================
# üåê WEB APPLICATION
# ===========================
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:8000"
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8000"

# ===========================
# üìÅ FILE STORAGE
# ===========================
UPLOAD_DIR="uploads"
MAX_FILE_SIZE=10485760       # 10MB in bytes
ALLOWED_FILE_TYPES=".csv,.xlsx,.json,.pdf,.mp3,.wav"

# ===========================
# üìà MONITORING & ANALYTICS
# ===========================
# Sentry (Error monitoring)
SENTRY_DSN="https://your-sentry-dsn-here"

# Google Analytics
GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# ===========================
# üîÑ PRODUCTION DEPLOYMENT
# ===========================
ENVIRONMENT="development"    # Options: development, staging, production
WORKERS=4                    # Number of worker processes
LOG_LEVEL="INFO"            # Options: DEBUG, INFO, WARNING, ERROR
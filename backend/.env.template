# Environment Variables Template
# Copy this to .env and fill in your values

# Application Settings
APP_NAME="Advanced AI Sales Automation"
APP_VERSION="2.0.0"
DEBUG=false
ENVIRONMENT="production"  # development, staging, production

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=4
RELOAD=false

# Database Configuration
MONGODB_URL="mongodb://localhost:27017"
MONGODB_DATABASE="ai_sales_automation"
MONGODB_MIN_POOL_SIZE=5
MONGODB_MAX_POOL_SIZE=50

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
REDIS_DB=0

# Security Settings
SECRET_KEY="your-super-secret-jwt-key-change-this-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=1440
ALGORITHM="HS256"
BCRYPT_ROUNDS=12

# API Keys for External Services
OPENAI_API_KEY=""
GOOGLE_SPEECH_API_KEY=""
AZURE_SPEECH_KEY=""
AZURE_SPEECH_REGION=""

# Economic Data APIs
FRED_API_KEY=""  # Federal Reserve Economic Data
ALPHA_VANTAGE_API_KEY=""  # Stock market data
QUANDL_API_KEY=""  # Financial and economic data

# News and Social Media APIs
NEWS_API_KEY=""
TWITTER_BEARER_TOKEN=""
GOOGLE_NEWS_API_KEY=""

# Geographic Services
GOOGLE_MAPS_API_KEY=""
MAPBOX_ACCESS_TOKEN=""

# Email Configuration
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME=""
SMTP_PASSWORD=""
FROM_EMAIL=""

# Monitoring and Logging
SENTRY_DSN=""
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Performance Settings
MAX_WORKERS=10
REQUEST_TIMEOUT=30
CONNECTION_TIMEOUT=10
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# ML Model Settings
MODEL_CACHE_SIZE=1000
MODEL_UPDATE_INTERVAL=3600
FEATURE_EXTRACTION_BATCH_SIZE=32

# Voice AI Settings
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
VOICE_MODEL_TYPE="transformer"

# Intelligence Services
MARKET_ANALYSIS_INTERVAL=3600  # seconds
COMPETITOR_MONITORING_INTERVAL=1800
TERRITORY_OPTIMIZATION_SCHEDULE="0 2 * * *"  # Cron format: daily at 2 AM
SEASONAL_ANALYSIS_SCHEDULE="0 3 1 * *"  # Monthly on 1st at 3 AM

# Data Storage
MAX_CONVERSATION_HISTORY=1000
MAX_ANALYSIS_RETENTION_DAYS=365
BACKUP_RETENTION_DAYS=30

# Security Headers
CORS_ORIGINS="http://localhost:3000,https://yourdomain.com"
CORS_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_HEADERS="*"

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Feature Flags
ENABLE_VOICE_AI=true
ENABLE_MARKET_ANALYSIS=true
ENABLE_TERRITORY_OPTIMIZATION=true
ENABLE_SEASONAL_PATTERNS=true
ENABLE_COMPETITIVE_INTELLIGENCE=true
ENABLE_REAL_TIME_COACHING=true
ENABLE_PERFORMANCE_MONITORING=true

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=10000

# WebSocket Settings
WS_MAX_CONNECTIONS=1000
WS_HEARTBEAT_INTERVAL=30

# Background Tasks
TASK_QUEUE_WORKERS=4
TASK_RETRY_ATTEMPTS=3
TASK_RETRY_DELAY=60

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES="csv,xlsx,json,txt"
UPLOAD_DIR="./uploads"

# API Documentation
DOCS_ENABLED=true
REDOC_ENABLED=true
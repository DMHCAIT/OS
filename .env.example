# Environment Variables for AI Lead Management System

# Application Settings
APP_NAME="AI Lead Management System"
APP_VERSION="1.0.0"
DEBUG=true
SECRET_KEY="your-super-secret-key-change-this-in-production"

# Database Configuration
MONGODB_URL="mongodb://localhost:27017"
DATABASE_NAME="lead_management_db"
REDIS_URL="redis://localhost:6379"

# API Configuration
API_V1_STR="/api/v1"
ACCESS_TOKEN_EXPIRE_MINUTES=480
ALLOWED_HOSTS="http://localhost:3000,http://localhost:8000"

# AI/ML Services
OPENAI_API_KEY="your-openai-api-key"
HUGGINGFACE_API_KEY="your-huggingface-api-key"

# Voice AI Services
ELEVENLABS_API_KEY="your-elevenlabs-api-key"
AZURE_SPEECH_KEY="your-azure-speech-key"
AZURE_SPEECH_REGION="your-azure-region"

# Email Configuration
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-email-password"

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="your-twilio-phone-number"

# File Storage
UPLOAD_DIR="uploads"
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=".csv,.xlsx,.json,.pdf"

# Security
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=900  # 15 minutes

# Logging
LOG_LEVEL="INFO"
LOG_FILE="logs/app.log"

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# ML Model Configuration
MODEL_UPDATE_INTERVAL=3600  # 1 hour
LEAD_SCORE_THRESHOLD=0.7
PREDICTION_CONFIDENCE_THRESHOLD=0.8

# Voice AI Configuration
VOICE_SAMPLE_RATE=16000
VOICE_CHUNK_DURATION=30  # seconds
SUPPORTED_LANGUAGES="en-US,en-GB,es-ES,fr-FR"

# Frontend Environment Variables
REACT_APP_API_URL="http://localhost:8000/api/v1"
REACT_APP_WS_URL="ws://localhost:8000"
REACT_APP_APP_NAME="AI Lead Management System"
REACT_APP_VERSION="1.0.0"

# Development Settings
NODE_ENV="development"
WATCHPACK_POLLING=true